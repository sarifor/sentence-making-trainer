extends templates/layout

block content

    div.table__top
        h1.table__top__title="Edit"
        a(href="/records").btn="List"
    
    if record
        div.form
            form(method="POST" enctype="application/x-www-form-urlencoded")
                div.form__input
                        label="Sentence:"
                        input(name="sentence", type="text", value=record.sentence)
                        label="Translated:"
                        input(name="translated", type="text", value=record.translated)                    
                        label="Source:"
                        input(name="source", type="text", value=record.source)
                        label="Uploaded:"
                        span(name="uploaded", type="text")=record.uploaded
                div.form__buttons
                        input(type="submit", value="Update").btn
                        input(type="submit", value="Delete").btn
    else
        div="No Data"